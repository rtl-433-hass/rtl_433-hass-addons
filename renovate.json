{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["merbanan/rtl_433"],
      "semanticCommitType": "feat"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.pre-commit-config\\.yaml$/"],
      "matchStrings": [
        "repo: https://github\\.com/(?<depName>[^\\s]+?)\\n\\s+rev: (?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/actionlint\\.yml$/",
        "/^\\.claude/hooks/SessionStart\\.sh$/"
      ],
      "matchStrings": [
        "rhysd/actionlint/(?<currentValue>v[0-9.]+)/scripts/download-actionlint\\.bash"
      ],
      "depNameTemplate": "rhysd/actionlint",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^rtl_433/Dockerfile$/",
        "/^rtl_433_mqtt_autodiscovery/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG rtl433GitRevision=(?<currentValue>[0-9.]+)"
      ],
      "depNameTemplate": "merbanan/rtl_433",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/release\\.yml$/"],
      "matchStrings": [
        "runner: ubuntu-(?<currentValue>[0-9]+\\.[0-9]+)(?:-arm)?\\n"
      ],
      "depNameTemplate": "ubuntu",
      "datasourceTemplate": "github-runners"
    }
  ]
}
